#home
  %h1 Careers

  = form_tag('/careers', :method => :get) do
    MOC:
    = text_field_tag :moc, params[:moc]
    = submit_tag "Search"

  %h1 Industry
  - @industry.each do |industry|
    %br
    = link_to industry.name, industry_path(industry.id)


  %br

  - if @careers.empty?
    No Careers Found
  - else
    %table
      %tr
        %th Title
        %th Flag

      - @careers.each do |career|
        %tr
          %td= link_to career.title, career_path(career.api_safe_onet_soc_code)
          %td= link_to 'Flag', 'careers/flag/'+career.api_safe_onet_soc_code


  - unless  params[:moc].nil?
    %p Page
    =link_to '<', careers_path({:page => @prev_page})
    =link_to '>', careers_path({:page => @next_page})

