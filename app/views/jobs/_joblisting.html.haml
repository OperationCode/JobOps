%ol.job-listings
  - @jobs.each do |job|
    %li.job-listing
      %span.job-number
        = @counter = @counter + 1
      .job-heading
        -if @flagged_jobs.include?(job)
          %a.unflag-item{ :href => '/jobs/flag/'+job.id.to_s, :data => { :jobid => job.id.to_s }}
        -else
          %a.flag-item{ :href => '/jobs/flag/'+job.id.to_s, :data => { :jobid => job.id.to_s }}
        %span.job-title-wrapper
          =link_to job.title, job_path(job.id), { :class => 'job-title' }
      %br.clearit
      %span.job-meta
        =job.company.name
        =job.location.location
        %span.job-aquire
          Acquired on
        =job.date_acquired
        %span.job-source{:class=>job.job_source}
          %img{ :src => '/images/bank-'+job.job_source.downcase.gsub(/_/,'')+'.png', :title => job.job_source }
      .job-excerpt
        =job.snippet
      %br.clear

