.job-search-box
  =form_for @search, :method => :post do |f|
    .search-block
      %label{ :for =>'q' }
        Search for
        %span
          (job title, skills, keywords)
      -if params[:search] and params[:search][:job_searches_keyword_contains]
        =f.text_field :job_searches_keyword_contains, :value => params[:search][:job_searches_keyword_contains]
      -else
        =f.text_field :job_searches_keyword_contains
    .search-block
      %label{ :for => 'near' }
        Near
        %span
          (address, city, state, or zip code)
      - if params[:search] and params[:search][:job_searches_location_contains]
        =f.text_field :job_searches_location_contains, :value => params[:search][:job_searches_location_contains]
      - elsif current_user
        =f.text_field :job_searches_location_contains, :value => current_user.location
      - else
        =f.text_field :job_searches_location_contains
    .search-btn-block
      = submit_tag 'Search', :class => 'green-btn'
    %br.clearit
