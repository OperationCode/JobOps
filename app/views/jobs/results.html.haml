.wide-column
  = render 'jobsearchbox'
  .inner-sidebar
    .filter-box.smart-filter-enable
      %strong
        Smart Filters
      %a{ :href => '#' }What's this?

    .filter-box.basics
      .filter-title
        Basics

    .filter-box.job-type
      .filter-title
        Job Type

    .filter-box.skills
      .filter-title
        Skills
      .filter-footer
        %a{ :href => '#'}Select skills...

    .filter-box.careers
      .filter-title
        Careers
      %ul
        - @careers.each do |career|
          %li= link_to career.title, :q => career.title, :location => params[:near]
      .filter-footer
        %a{ :href => '#'}Select careers...

    .filter-box.companies
      .filter-title
        Companies
      .filter-footer
        %a{ :href => '#'}Select companies...

    .filter-box.industries
      .filter-title
        Industries
      .filter-footer
        %a{ :href => '#'}Select industries...

  .white-box.search-results-wrapper
    .search-results-header
      .search-result-title
        %span
          =@jobs.total_entries
        Jobs Found
      .search-result-sortby
        Sort by:
        %select
          %option{ :value => '1' }
            Relevance
          %option{ :value => '2' }
            Distance
          %option{ :value => '3' }
            Salary
    %ol.job-listings
      - @jobs.each do |job|
        %li.job-listing
          %span.job-number
            = @counter = @counter + 1
          =link_to job.title, job_path(job.id), { :class => 'job-title' }
          %span.job-meta
            =job.company.name
            =job.location.location
            %span.job-aquire
              Acquired on
            =job.date_acquired
            %span.job-aquire
              from 
            %span.job_source{:class=>job.job_source}
              =job.job_source
          .job-excerpt
            =job.snippet
          -if @flagged_jobs.include?(job)
            %span.unflag-item
              %a{ :href => '/jobs/flag/'+job.id.to_s }
          -else
            %span.flag-item
              %a{ :href => '/jobs/flag/'+job.id.to_s }
          %br.clear
      =will_paginate @jobs

