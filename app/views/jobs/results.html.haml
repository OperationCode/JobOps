.wide-column
  .job-search-box
    = form_tag('/jobs', :method => :get) do
      .search-block
        %label{ :for =>'q' }
          Search for
          %span
            (job title, skills, keywords)
        = text_field_tag :q, params[:q]
      .search-block
        %label{ :for => 'near' }
          Near
          %span
            (address, city, state, or zip code)
        = text_field_tag :location, params[:location]
      .search-btn-block
        = submit_tag 'Search', :class => 'green-btn'
